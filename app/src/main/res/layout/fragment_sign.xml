<layout xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chickinnick.earnie.enter.SignFragment"
    android:background="@color/colorPrimary">

    <ImageView
        android:transitionName="logotype"
        android:scaleType="centerInside"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:layout_width="@dimen/logo_side"
        android:layout_height="@dimen/logo_side" />


    <EditText
        android:hint="@string/email"
        android:layout_below="@+id/logo"
        android:background="@drawable/edit_text_background"
        android:id="@+id/email"
        style="@style/EditTextEnter" />
    <EditText
        android:hint="@string/password"
        style="@style/EditTextEnter"
        android:layout_below="@+id/email"
        android:background="@drawable/edit_text_background"
        android:id="@+id/password" />

    <Button
        style="@style/ButtonEnter"
        android:textColor="@color/white"
        android:id="@+id/login_btn"
        android:background="@drawable/btn_background_selector_login"
        android:layout_below="@+id/password"
        android:text="@string/login" />


    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/or_tv"
        android:layout_below="@+id/login_btn"
        android:text="@string/or"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:padding="6dp"
        android:textSize="@dimen/text_size"
        android:layout_margin="2dp"

        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/sign_up_btn"
        android:background="@drawable/btn_background_selector_sign"
        android:layout_below="@+id/or_tv"
        android:text="@string/sign_up"
        style="@style/ButtonEnter" />


    <TextView

        android:layout_below="@+id/sign_up_btn"
        android:layout_margin="10dp"
        android:clickable="true"
        android:id="@+id/text_forgot"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>
</layout>