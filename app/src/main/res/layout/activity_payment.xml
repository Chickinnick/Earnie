<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.chickinnick.earnie.payment.PaymentActivity">

        <android.support.v7.widget.Toolbar

            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">


            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/text_size"
                android:textColor="@color/toolbar_title_blue"
                android:maxLines="1"
                android:id="@+id/title"
                android:text="@string/payment_methods"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/drawer_btn"
                android:layout_gravity="start"
                android:background="@drawable/ic_menu_drawer_back"
                android:layout_height="wrap_content"
                android:layout_width="30dp"
                android:padding="2dp"
                android:width="25dp" />
        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:layout_below="@+id/toolbar"
            android:id="@+id/content_coteainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="@drawable/main_activity_background"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:padding="@dimen/activity_horizontal_margin"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/payment_list_chose"
                    android:text="@string/payment_list_chose"
                    android:background="@drawable/btn_setting_list_background"
                    style="@style/EditTextEnter" />

                <View
                    android:layout_marginBottom="@dimen/divider_margin"
                    android:layout_marginTop="@dimen/divider_margin"
                    android:background="@color/grey_middle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/payment_meth_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</layout>